<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffdd00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:popupTheme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="2dp"
            android:layout_alignParentLeft="true"/>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="169dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/pin2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/opensans_light"
        android:text="ABOUT APPLICATION"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/textView4"
        android:layout_width="385dp"
        android:layout_height="371dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/opensans_light_italic"
        android:text="MapIT is a company that provides interactive and digitalized maps for public establishments. It envisions change and innovation to cope up with the current generation’s technology.
As for today’s tool for navigation, a digital map is widely used. It can be for car navigation, hiking down a trail, or simply lost in an unfamiliar street. Overall, it’s a very handy tool to use.
This will be an innovation from both digital maps and traditional, in the sense of Interior detailing and portability that will improve navigation, convenience, and time."
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />


    <com.codesgood.views.JustifiedTextView
        android:id="@+id/textView25"
        android:layout_width="385dp"
        android:layout_height="451dp"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/opensans_light_italic"
        android:text="TIPlaces is a product of a mapping service company called MapIT. With its construction being made specifically for TIP-Quezon City, It's aim is to bring convenience and a sense of modernity to to the people in the campus that use it."
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>