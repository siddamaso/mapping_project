<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffdd00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:popupTheme="@style/AppTheme.AppBarOverlay"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="2dp"
                android:layout_alignParentLeft="true"/>
        </androidx.appcompat.widget.Toolbar>
a
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:background="@drawable/bg">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <RelativeLayout
                    android:id="@+id/relLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:padding="2dp">

                <ImageView
                    android:id="@+id/guppy_pic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/pin3" />

                <com.codesgood.views.JustifiedTextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans_regular"
                    android:padding="2dp"
                    android:textAlignment="center"
                    android:text="HOW TO USE"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/opensans_extra_bold"
                    android:text="WHERE AM I?"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:layout_below="@+id/guppy_pic"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="THIS ICON TELLS WHERE YOUR"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:layout_below="@+id/guppy_pic"/>
                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="CURRENT LOCATION IS"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:layout_below="@+id/guppy_pic"/>
                <ImageView
                    android:id="@+id/list1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="46dp"
                    android:src="@drawable/list"
                    android:layout_below="@+id/textview6"/>
                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/list1"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="#000"
                    android:text="WHERE TO GO?"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/list1"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="#000"
                    android:text="SWIPE THE SCREEN TO THE"
                    android:textSize="13dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginLeft="39dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/list1"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="#000"
                    android:text="RIGHT TO BROWSE LOCATIONS"
                    android:textSize="13dp"
                    android:layout_marginTop="42dp"
                    android:layout_marginLeft="27dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="INSIDE THE CAMPUS"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="#000"
                    android:layout_marginTop="56dp"
                    android:textSize="12dp"
                    android:layout_marginLeft="65dp"
                    android:layout_below="@id/list1"/>

                <ImageView
                    android:id="@+id/list2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/list2"
                    android:layout_below="@id/textview6"/>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CHOOSE LOCATION"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="230dp"
                    android:layout_below="@id/list2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CLICK ON THE"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="255dp"
                    android:layout_below="@id/text1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="LOCATION YOU WANT"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="233dp"
                    android:layout_below="@id/text1"/>

                <TextView
                    android:id="@+id/lastlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TO GO TO"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_marginLeft="265dp"
                    android:layout_marginTop="21dp"
                    android:layout_below="@id/text1"/>
                <ImageView
                    android:id="@+id/lastimage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="55dp"
                    android:src="@drawable/minimap"
                    android:layout_below="@+id/lastlist"/>
                <TextView
                    android:id="@+id/textnavigate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NAVIGATE"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:layout_marginLeft="245dp"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/lastlist"/>
                <TextView
                    android:id="@+id/textfreely"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="FREELY NAVIGATE THE MAP OF"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_marginLeft="190dp"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_below="@id/textnavigate"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="YOUR CAMPUS"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_marginLeft="235dp"
                    android:layout_below="@+id/textfreely"/>


            </RelativeLayout>

            </ScrollView>

        </FrameLayout>

    </com.google.android.material.appbar.AppBarLayout>









</androidx.constraintlayout.widget.ConstraintLayout>